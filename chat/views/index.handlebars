<div class="container mi-container">
    <input type="text" id="userNick" value="{{ user.nick }}" hidden readonly>
    <input type="text" id="userSala" value="{{ user.sala }}" hidden readonly>
    <input type="text" id="userAvatar" value="{{ user.avatar }}" hidden readonly>
    <div class="row clearfix">
    <div class="col-lg-12">
        <div class="card chat-app">
        <div id="plist" class="people-list">
            <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-search"></i></span>
            </div>
            <input type="text" class="form-control" placeholder="Search...">
            </div>
            <ul class="list-unstyled chat-list mt-2 mb-0">     
            </ul>
        </div>
        <div class="chat">
            <div class="chat-header clearfix">
            <div class="row">
                <div class="col-lg-6">
                    <img src="https://bootdey.com/img/Content/avatar/{{ user.avatar }}.png" alt="avatar">
                    <div class="chat-about">
                    <h6 class="m-b-0">{{ user.nick }}</h6>
                    </div>
                </div>
                <div class="col-lg-6 hidden-sm text-right">
                <input id="gpt-check" type="checkbox" hidden/>
                <a href="javascript:void(0);" class="btn btn-outline-secondary" onclick="activarGPT();"><img id="btn-gpt" src="/images/ia-logo-off.png"/></a>
                <a href="/" class="btn btn-outline-primary">Cambiar de sala</i></a>
                <!--<a href="javascript:void(0);" class="btn btn-outline-info"><i class="fa fa-cogs"></i></a>-->
                <!--<a href="javascript:void(0);" class="btn btn-outline-warning"><i class="fa fa-question"></i></a>-->
                </div>
            </div>
            </div>
            <div id="chatBox" class="chat-history">
            <ul class="m-b-0"></ul>
            </div>
            <div class="chat-message clearfix">
            <div class="input-group mb-0">
                <div class="input-group-prepend">
                <button id="send" class="input-group-text"><i class="fa fa-send"></i></button>
                </div>
            <input id="msg" type="text" class="form-control" placeholder="Enter text here...">
            </div>
            </div>
        </div>
        </div>
    </div>
    </div>
</div>
<script type="text/javascript">
    let nick = document.getElementById("userNick").value;
    let sala = document.getElementById("userSala").value;
    let avatar = document.getElementById("userAvatar").value; 
    const current_user = {
        nick : nick,
        avatar : avatar,
        sala : sala
    };
    function activarGPT(){
        const btn_gpt = document.getElementById("btn-gpt");
        const gpt_check = document.getElementById("gpt-check");
        if(btn_gpt.src.endsWith("ia-logo-on.png")){
            btn_gpt.src = "/images/ia-logo-off.png"; 
            gpt_check.checked = false;   
        }else{
            btn_gpt.src = "/images/ia-logo-on.png";
            gpt_check.checked = true;
        }
        console.log("HOLA GPT");
    }
</script>
<script type="module" src="/js/chat.js"></script>